# ignore everything in the root except the "wp-content" directory.
/*
!wp-content/
!.gitignore
!wp-config.php
!.env.example
!example.env
!.eslintrc
!webpack.mix.js
!package.json
!composer.json
!composer.lock
!package-lock.json
!yarn.lock
!README.md
!.gitpod.yml
!.gitpod.dockerfile
!docker-compose.yml

# ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
wp-content/*
!config
!wp-content/themes/
!wp-content/plugins
wp-content/plugins/*
!wp-content/plugins/gravityforms

# ignore specific themes
wp-content/themes/twenty*/
wp-content/themes/understrap*/

# ignore node and composer dependency directories
node_modules/
vendor/

# ignore log files and databases
*.log
*.sql
*.sqlite
.DS_Store